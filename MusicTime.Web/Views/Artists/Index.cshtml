@model IEnumerable<MusicTime.Domain.Artist>

@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Artists", FormMethod.Get))
{
  <div>
    @Html.TextBox("searchTerm")
  </div>
  <div>
    <input type="submit" name="submit" value="Search" />
  </div>

}
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Band.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.FirstName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.LastName)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Instrument)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Age)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.ArtistBio)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Band.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.FirstName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.LastName)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Instrument)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Age)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.ArtistBio)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
  }

</table>
