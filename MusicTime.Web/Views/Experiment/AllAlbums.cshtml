@model IEnumerable<MusicTime.Domain.Album>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<input type="button" id="btnClose2" value="x" onclick="closeForm()"/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Band.Name)
        </th>
