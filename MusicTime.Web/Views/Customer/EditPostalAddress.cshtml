@model MusicTime.Domain.View_Models.PostalAddressEditViewModel

@{
  ViewBag.Title = "EditPostalAddress";
}

<head>
  <link href="~/Content/EditPostalAddress.css" />
</head>

<h2>EditPostalAddress</h2>
@using (Html.BeginForm())
{
<div class="form-group">
  <div class="row">
    @Html.HiddenFor(model => model.PostalAddressID)
    @Html.HiddenFor(model => model.CustomerID)
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.StreetAddress1)
      </div>
      @Html.EditorFor(model => model.StreetAddress1)
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.StreetAddress2)
      </div>
      @Html.EditorFor(model => model.StreetAddress2)
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.City)
      </div>
      @Html.EditorFor(model => model.City)
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.PostalCode)
      </div>
      @Html.EditorFor(model => model.PostalCode)
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.SelectedCountryIso3)
      </div>
      @Html.DropDownListFor(model => model.SelectedCountryIso3, new SelectList(Model.Countries, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Country" })
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
      <div class="col-sm-3">
        @Html.LabelFor(model => model.SelectedRegionCode)
      </div>
      @Html.DropDownListFor(model => model.SelectedRegionCode, new SelectList(Model.Regions, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Region" })
    </div>
  </div>
  

  <div class="col-md-offset-2 col-md-10">
    <input type="submit" value="Save" class="btn btn-success" />
  </div>
</div>
        }
